{
  "name": "research",
  "displayName": "Research",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:researchView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "research.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "research.add",
        "title": "Add a Note",
        "icon": "$(add)"
      },
      {
        "command": "research.open",
        "title": "Open Link",
        "icon": "$(globe)"
      },
      {
        "command": "research.remove",
        "title": "Discard Note",
        "icon": "$(close)"
      },
      {
        "command": "research.openAll",
        "title": "Open All Links",
        "icon": "$(empty-window)"
      },
      {
        "command": "research.removeAll",
        "title": "Discard All Notes"
      }
    ],
    "views": {
      "researchViewContainer": [
        {
          "id": "researchView",
          "name": "Research"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "researchViewContainer",
          "title": "Research",
          "icon": "$(note)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "researchView",
        "contents": "Keep track of important or useful websites by adding notes here.\n[Add Note](command:research.add)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "research.add",
          "when": "view == researchView",
          "group": "navigation"
        },
        {
          "command": "research.openAll",
          "when": "view == researchView",
          "group": "navigation"
        },
        {
          "command": "research.openAll",
          "when": "view == researchView",
          "group": "@0"
        },
        {
          "command": "research.removeAll",
          "when": "view == researchView",
          "group": "@1"
        }
      ],
      "view/item/context": [
        {
          "command": "research.open",
          "when": "view == researchView && viewItem == note",
          "group": "inline@0"
        },
        {
          "command": "research.remove",
          "when": "view == researchView && viewItem == note",
          "group": "inline@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.64.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vscode/test-electron": "^2.0.3",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "nanoid": "^3.3.1"
  }
}
